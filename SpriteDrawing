int main() {
	int pos_x = 800, pos_y = 600;
	RenderWindow window(VideoMode(1600,1200), " Drawing Something ", Style::Fullscreen);
	Texture texture;
	srand(time(NULL));
	if (!texture.loadFromFile("Texture2.jpg")) { std::cout << " Error " << std::endl; }
	Sprite sprite(texture);
	sprite.setPosition(Vector2f(800, 600));
	sprite.setTextureRect(IntRect(300, 400, 200, 300));
	sprite.setOrigin(Vector2f(100, 150));
	sprite.setColor(Color::Yellow);
	while (window.isOpen()) {
		Event event;
		
		int ran_r = rand() % 255 + 1;
		int ran_g = rand() % 255 + 1;
		int ran_b = rand() % 255 + 1;
		sprite.setColor(Color(ran_r, ran_g, ran_b, 255));
		sprite.setPosition(Vector2f(rand() % 1600, rand() % 1200));
		sprite.rotate(0.09f);
		while (window.pollEvent(event)) {
			switch (event.type) {
			case Event::Closed:
				window.close();
				break;
			}
		}
		window.clear(Color::Black);
		window.draw(sprite);
		window.display();
	}
	return 0;
}
